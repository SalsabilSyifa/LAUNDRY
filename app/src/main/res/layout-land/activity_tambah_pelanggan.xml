<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".TambahPelanggan">


    <TextView
        android:id="@+id/tv_tambah_pengguna"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TAMBAH PELANGGAN"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/et_namalengkap"
        />
    <TextView
        android:id="@+id/tv_namalengkap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Lengkap"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/et_namalengkap"
        app:layout_constraintEnd_toStartOf="@+id/et_namalengkap"
        />
    <EditText
        android:id="@+id/et_namalengkap"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Nama Lengkap"
        android:background="@drawable/edittext_border"
        android:padding="12dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_tambah_pengguna"
        app:layout_constraintStart_toEndOf="@id/tv_namalengkap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp" />


    <TextView
        android:id="@+id/tv_alamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alamat"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/et_alamat"
        app:layout_constraintTop_toBottomOf="@id/tv_namalengkap"
        app:layout_constraintEnd_toStartOf="@+id/et_alamat"
        />
    <EditText
        android:id="@+id/et_alamat"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Alamat"
        android:background="@drawable/edittext_border"
        android:padding="12dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/et_namalengkap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/tv_nohp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No HP Aktif"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/et_nohp"
        app:layout_constraintEnd_toStartOf="@id/et_nohp"
        />
    <EditText
        android:id="@+id/et_nohp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="No HP Aktif"
        android:padding="12dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_border"
        app:layout_constraintTop_toBottomOf="@id/et_alamat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp" />
    <Button
        android:id="@+id/bt_simpan"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:text="Simpan"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/orange"
        app:layout_constraintTop_toBottomOf="@id/et_nohp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>