<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:id="@+id/cv_card_layanan"
    android:padding="10dp"
    app:cardCornerRadius="20dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:backgroundTint="@color/amber"
        android:elevation="12dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/id_layanan_judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:text="ID Layanan :"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/id_layanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="5dp"
            android:textColor="@color/black"
            android:text="@string/card_layanan_id"
            android:textSize="20sp"
            />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginTop="35dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_nama_layanan_judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Layanan     :"
            android:layout_marginStart="50dp"
            android:textStyle="bold"
            android:textSize="22sp"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/tv_nama_layanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/card_layanan_nama"
            android:layout_marginStart="40dp"
            android:textStyle="bold"
            android:textSize="22sp"
            android:padding="5dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_harga_judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harga                        :"
            android:layout_marginStart="50dp"
            android:padding="5dp"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tv_harga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/card_layanan_harga"
            android:padding="5dp"
            android:layout_marginStart="40dp"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_cabang_judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cabang                     :"
            android:layout_marginStart="50dp"
            android:padding="5dp"
            android:textSize="20sp"
            />


        <TextView
            android:id="@+id/tv_cabang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/card_layanan_cabang"
            android:layout_marginStart="40dp"
            android:textSize="20sp"
            android:padding="5dp"

            />
    </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>