<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tambah_layanan">

    <TextView
        android:id="@+id/tv_tambah_layanan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text= "@string/tambah_layanan"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />
    <TextView
        android:id="@+id/tv_namalayanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tambah_layanan_namalayanan"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="80dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_tambah_layanan"
        />
    <EditText
        android:id="@+id/et_namalayanan"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="@string/tambah_layanan_namalayanan"
        android:background="@drawable/edittext_border"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="80dp"
        app:layout_constraintTop_toBottomOf="@id/tv_namalayanan"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="12dp" />


    <TextView
        android:id="@+id/tv_harga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tambah_layanan_harga"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/et_namalayanan"
        app:layout_constraintStart_toStartOf="parent"
        />
    <EditText
        android:id="@+id/et_harga"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="@string/tambah_layanan_harga"
        android:background="@drawable/edittext_border"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="80dp"
        app:layout_constraintTop_toBottomOf="@id/tv_harga"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/tv_cabang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tambah_layanan_cabang"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="270dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_tambah_layanan"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <EditText
        android:id="@+id/et_cabang"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="@string/tambah_layanan_cabang"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/edittext_border"
        app:layout_constraintTop_toBottomOf="@id/tv_cabang"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/bt_simpan_layanan"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/tambah_layanan_simpan"
        android:textColor="@color/white"
        android:backgroundTint="@color/amber"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@id/et_harga"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>

