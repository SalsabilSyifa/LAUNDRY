<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_card_pelanggan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:backgroundTint="@color/black"
        android:elevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/id_pelanggan_judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="5dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/white"
            android:text="ID Pelanggan :"
            android:textSize="20sp" />

            <TextView
                android:id="@+id/id_pelanggan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/white"
                android:text="@string/card_pelanggan_id"
                android:textSize="20sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_nama_judul"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="Nama Pelanggan"
        android:padding="5dp"
        android:layout_marginStart="50dp"
        android:textStyle="bold"
        android:textSize="22sp"
        />

        <TextView
            android:id="@+id/tv_titik_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="22sp"
            />

        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/card_pelanggan_nama"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="22sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_nohp_judul"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:text="No HP"
            android:layout_marginStart="50dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_titik_nohp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="22sp"
            />
        <TextView
            android:id="@+id/tv_nohp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/card_pelanggan_nohp"
            android:padding="5dp"
            android:textSize="20sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_terdaftar_judul"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="Terdaftar"
        android:padding="5dp"
        android:layout_marginStart="50dp"
        android:textSize="20sp"
        />
        <TextView
            android:id="@+id/tv_titik_terdaftar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="22sp"
            />
        <TextView
            android:id="@+id/tv_terdaftar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/card_pelanggan_terdaftar"
            android:padding="5dp"
            android:textSize="20sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_alamat_judul"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="Alamat"
        android:padding="5dp"
        android:layout_marginStart="50dp"
        android:textSize="20sp"
        />
        <TextView
            android:id="@+id/tv_titik_alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="22sp"
            />
        <TextView
            android:id="@+id/tv_alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/card_pelanggan_alamat"
            android:padding="5dp"
            android:textSize="20sp"
            />
    </LinearLayout>


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        >

        <Button
            android:id="@+id/bt_hubungi"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:text="@string/card_pelanggan_hubungi"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"
            />
        <Button
            android:id="@+id/bt_lihat"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:text="@string/card_pelanggan_lihat"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/amber"
            />

    </GridLayout>


</LinearLayout>

</androidx.cardview.widget.CardView>