<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_item_konfirmasi_tambahan">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/yellow"
        android:elevation="12dp"
        android:layout_margin="18dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/textIndexTambahan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[1]"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:id="@+id/detail_tambahan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_NamaTambahan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" nama_item_tambahan" />

                <TextView
                    android:id="@+id/tv_HargaTambahan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="harga_item_tambahan" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>
