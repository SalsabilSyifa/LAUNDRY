<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_pilihTambahan"
    android:padding="10dp"
    app:cardCornerRadius="20dp"
    android:layout_marginBottom="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:backgroundTint="@color/yellow"
        android:elevation="12dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_tambahan_nomor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[1]"
                android:layout_marginStart="10dp"
                android:textSize="18sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:layout_marginTop="38dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_nama_tambahan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tv_namatambahan"
                android:padding="10dp"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:textSize="20sp"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp">
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/tv_harga"
                android:padding="2dp"
                android:layout_marginStart="10dp"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tv_titik_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:padding="2dp"
                android:textStyle="bold"
                android:textSize="22sp"
                />
            <TextView
                android:id="@+id/tv_harga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/card_tambahan_harga"
                android:padding="2dp"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>