<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_card_pegawai"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="10dp"
    app:cardCornerRadius="20dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:backgroundTint="@color/black"
        android:elevation="12dp">

        <TextView
            android:id="@+id/id_pegawai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="5dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/white"
            android:text="@string/card_pegawai_id"
            android:textSize="16sp" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_nama_pegawai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/card_pegawai_nama"
            android:textStyle="bold"
            android:paddingStart="15dp"
            android:textSize="18dp"
            android:layout_marginTop="35dp"
            android:paddingTop="5dp"/>

        <TextView
            android:id="@+id/tv_alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/card_pelanggan_alamat"
            android:paddingStart="15dp"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            />


        <TextView
            android:id="@+id/tv_nohp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/card_pelanggan_nohp"
            android:paddingStart="15dp"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/tv_terdaftar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/card_pelanggan_terdaftar"
            android:paddingStart="15dp"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            />


        <TextView
            android:id="@+id/tv_cabang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/card_pegawai_cabang"
            android:paddingStart="15dp"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            />


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="2"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            >

            <Button
                android:id="@+id/bt_hubungi"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:text="@string/card_pelanggan_hubungi"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:backgroundTint="@color/yellow"
                />
            <Button
                android:id="@+id/bt_lihat"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:text="@string/card_pelanggan_lihat"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:backgroundTint="@color/black"
                />

        </GridLayout>


    </LinearLayout>



</androidx.cardview.widget.CardView>