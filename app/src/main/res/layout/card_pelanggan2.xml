<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tv_card_pelanggan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/black"
        android:elevation="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="5dp"
            android:text="@string/card_pelanggan_id"
            android:textSize="16sp" />

    </androidx.cardview.widget.CardView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_card_pelanggan_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/card_pelanggan_id"
        android:textStyle="bold"
        android:paddingStart="10dp"
        android:layout_marginTop="5dp"
        android:paddingTop="5dp"/>
    <TextView
        android:id="@+id/tv_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Pelanggan"
        android:paddingStart="15dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="18dp"
        />


    <TextView
        android:id="@+id/tv_nohp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No HP"
        android:paddingStart="15dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/tv_terdaftar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Terdaftar"
        android:paddingStart="15dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/tv_alamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alamat"
        android:paddingStart="15dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="5dp"
        />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        >

        <Button
            android:id="@+id/bt_hubungi"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="Hubungi"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:backgroundTint="@color/black"
            />
        <Button
            android:id="@+id/bt_lihat"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="Lihat"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:backgroundTint="@color/yellow"
            />

    </GridLayout>


</LinearLayout>

</androidx.cardview.widget.CardView>